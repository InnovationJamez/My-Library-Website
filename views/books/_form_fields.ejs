<div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= book.title %>" required>
    </div>
    <div class="form-item"><label for="author">Author</label>
        <select name="author" required>
            <% authors.forEach((author)=> { %>
                <% if(author.id===book.author){ %>
                    <option selected value="<%= author.id %>" label="<%= author.name %>"></option>
                    <% } else { %>
                        <option value="<%= author.id %>" label="<%= author.name %>"></option>
                <% } %>
            <% }) %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label for="publishDate">Publish Date</label>
        <input type="date" name="publishDate"
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0]%>">
    </div>
    <div class="form-item">
        <label for="pageCount">Page Count</label>
        <input required type="number" name="pageCount" min="1" max="10000" value="<%= book.pageCount %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="cover">Cover</label>
        <input type="file" name="cover" class="book-cover filepond" required></div>
    <div class="form-item">
        <label for="description">Description</label>
        <textarea name="description" value="<%= book.description %>"></textarea>
    </div>
</div>